    <footer>
        <div class="footer-content">
            <div class="footer-categories">
                <h3>Categories</h3>
                <div>
                    <p onclick="window.location.href='/blog/category/tech'">Tech</p>
                    <p onclick="window.location.href='/blog/category/travel'">Travel</p>
                    <p onclick="window.location.href='/blog/category/food'">Food</p>

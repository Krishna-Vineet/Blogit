                    <a href="https://discord.com/" target="_blank"><i class="fab fa-discord"></i></a>

                </div>
                <% if (user) { %>
                <button id="logout">Logout</button>
                <button id="deleteAccount">Delete Account</button> <!-- Login button if user is logged out -->
                <% } else { %>
                <button id="login" onclick="window.location.href='/login'">Login</button> <!-- Login button if user is logged out -->
                <button id="register" onclick="window.location.href='/register'">Register</button> <!-- Login button if user is logged out -->
                <% } %>
            </div>
            
        </div>

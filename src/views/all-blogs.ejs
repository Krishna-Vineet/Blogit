<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="/css/all-blogs.css">
    <link rel="stylesheet" href="/css/blog.css">
</head>
<body>
    <%- include('partials/header') %>

    <main>
        <section class="blogs-container">
            <div class="blogs-header">
                <h1>All Blogs</h1>
                <div class="filter-buttons">
                    <button class="filter-btn" data-filter="latest">Latest</button>
                    <button class="filter-btn" data-filter="trending">Trending</button>
                    <button class="filter-btn" data-filter="technology">Technology</button>
                    <button class="filter-btn" data-filter="travel">Travel</button>
                    <button class="filter-btn" data-filter="food">Food</button>
                    <!-- Add more filter buttons as needed -->
                </div>
            </div>

            <div class="blogs-grid">
                <% for (const blog of blogs) { %>
                    <%- include('partials/blog', { blog }) %>
                <% } %>
            </div>
        </section>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/all-blogs.js"></script>
</body>
</html>
